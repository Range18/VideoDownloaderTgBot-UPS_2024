{
  "name": "video-downloader",
  "version": "1.0.0",
  "description": "Telegram bot to download videos from YouTube, VK, Dzen",
  "main": "main.js",
  "author": "Range",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" ",
    "start": "concurrently \"tsc\" \"node dist/main.js\" ",
    "start:dev": "concurrently -p \"[{name}]\" -n \"TSC,Nodemon\" -c \"bgBlue.bold,bgGreen.bold\" \"tsc --watch\" \"nodemon ./dist/main.js\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start:api": "./bin/telegram-bot-api.exe --api-id= --api-hash= --local"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "dotenv": "^16.3.1",
    "env-var": "^7.4.1",
    "form-data": "^4.0.0",
    "pg": "^8.11.3",
    "telegraf": "^4.14.0",
    "tslib": "^2.6.2",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/node": "18.15.11",
    "@types/pg": "^8.10.7",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.3.2",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.7.4"
  }
}
